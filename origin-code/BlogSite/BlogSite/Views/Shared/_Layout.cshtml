<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@(ViewData["title"] + " | CtrlKismet's Blog")</title>
    @RenderSection("_extraCSS", false)
    <link href="https://cdnjs.loli.net/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="shortcut icon" id="web_icon" type="image/x-icon" href="~/images/faviconIN.ico" />
</head>

<body onkeydown="listen_login('@(Context.User.Identity.IsAuthenticated)')">
    <div class="loading-page">
        <i class="fa fa-spinner fa-spin fa-5x"></i>
    </div>
    <div class="main-page">
        <nav class="head-bar">
            <div class="hover headbar-home"><a href="/">.◕ᴗ◕.</a></div>
            <div id="headbar-menu"><div class="hover"><a href="/Home/Archive">归档</a></div></div>

            @if (!Context.User.Identity.IsAuthenticated)
            {
                <div class="hover headbar-about">
                    <a href="/Home/About">About</a>
                </div>
            }
            else
            {
                <div>
                    <a href="https://ctrlkismet.top/authorization/newblog"><i class="fa fa-plus"></i></a>@Html.Raw("&nbsp;|&nbsp;")<a href="https://ctrlkismet.top/authorization/logout"><i class="fa fa-sign-out"></i></a>
                </div>
            }

        </nav>
        <div class="content">
            <main id="home">
                @RenderBody()
            </main>
            <aside>
                @RenderSection("_extraSculptrue", false)
                <div class="clock">
                    <div class="timeNum"></div>
                    <div class="timeNum"></div>
                    <span>:</span>
                    <div class="timeNum"></div>
                    <div class="timeNum"></div>
                    <span>:</span>
                    <div class="timeNum"></div>
                    <div class="timeNum"></div>
                </div>
                <div id="YYMMDD"></div>
                <hr />
                @RenderSection("_extraAside", false)
                <div class="topRocket">
                    <i class="fa fa-2x fa-arrow-up" onclick="UpToTop()"></i>
                </div>
            </aside>
        </div>
        <div class="footer">
            <div class="text">
                <span>&copy;CtrlKismet's Blog</span>
                <span> | Powered by <a href="https://dotnet.github.io/">.NET Core</a></span>
            </div>
            <div class="beian">
                <a target="_blank" href="http://www.beian.gov.cn/portal/registerSystemInfo?recordcode=33011802001388" style="display:inline-block;text-decoration:none;height:20px;line-height:20px;">
                    <img src="~/images/beian.png" style="float:left;" />
                    <p style="float:left;height:20px;line-height:20px;margin: 0px 0px 0px 5px; color:#939393;">
                        浙公网安备
                        33011802001388号
                    </p>
                </a>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.loli.net/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.loli.net/ajax/libs/vue/2.6.10/vue.min.js"></script>
    <script type="text/x-mathjax-config">
        MathJax.Hub.Config({
        showProcessingMessages: false,
        messageStyle: "none",
        extensions: ["tex2jax.js"],
        jax: ["input/TeX", "output/HTML-CSS"],
        tex2jax: {
        inlineMath:  [ ["$", "$"] ],
        displayMath: [ ["$$","$$"] ],
        skipTags: ['script', 'noscript', 'style', 'textarea', 'pre','code','a'],
        ignoreClass:"comment-content"
        },
        "HTML-CSS": {
        availableFonts: ["STIX","TeX"],
        showMathMenu: false
        }
        });
        MathJax.Hub.Queue(["Typeset",MathJax.Hub]);
    </script>
    <script type="text/javascript" async src="https://cdnjs.loli.net/ajax/libs/mathjax/2.7.5/MathJax.js?config=TeX-AMS-MML_HTMLorMML">
    </script>
    <script src="~/js/script.js"></script>
    @RenderSection("_extraJS", false)
</body>

</html>